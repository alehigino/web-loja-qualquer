@model LojaQualquer.Web.ViewModels.ProductCreateUpdateViewModel
@{
    ViewData["Title"] = "Deletar Produto";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-5">
        <h3>@ViewData["Title"]</h3>

        <hr />

        <vc:summary></vc:summary>
        <h4>Deseja realmente exluir o produto @Model.ProductId - @Model.Name ?</h4>

        <div class="form-group">
            <a class="btn btn-outline-primary" asp-controller="Product" asp-action="ConfirmDelete" asp-route-productId="@Model.ProductId">Confirmar</a>
            <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index">Cancelar</a>
        </div>
    </div>

</div>