@model LojaQualquer.Web.ViewModels.ProductCreateUpdateViewModel
@{
    ViewData["Title"] = "Editar Produto";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-5">
        <h3>@ViewData["Title"]</h3>

        <hr />

        <vc:summary></vc:summary>
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input maxlength="128" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select class="form-control" asp-for="Category">
                    <option value="">Selecione uma categoria</option>
                    <option value="0">Alimento</option>
                    <option value="1">Bebidas</option>
                    <option value="2">Outros</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-append">
                        <span class="input-group-text">R$</span>
                    </div>
                    <input type="number" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>

</div>